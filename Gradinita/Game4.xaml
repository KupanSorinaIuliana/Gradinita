        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="797*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="resources/farm-bg-6.jpeg"/>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="120" Margin="200,0,0,0" VerticalAlignment="Center" Source="resources/fence.png" Grid.Column="1"/>
