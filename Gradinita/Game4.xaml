        <Image Grid.Column="1" HorizontalAlignment="Center" Height="142" Margin="400,40,0,0" VerticalAlignment="Top" Source="resources/4.png" RenderTransformOrigin="0.147,0.395"/>
        <Image Grid.Column="1" HorizontalAlignment="Center" Height="185" Margin="400,0,0,0" VerticalAlignment="Center" Width="150" Source="resources/3.png"/>
        <Image Grid.Column="1" HorizontalAlignment="left" Height="88" Margin="10,0,677,350" VerticalAlignment="Top" Width="102" Source="resources/next.png" RenderTransformOrigin="0.5,0.5" MouseDown="Image_MouseDown">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="181.021"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
